{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.tsx",
    "packages/**/src/**/*.js",
    "examples/**/pages/**/*.js",
    "examples/**/pages/**/*.ts",
    "examples/**/pages/**/*.tsj",
    "examples/**/src/**/*.js",
    "examples/**/src/**/*.ts",
    "examples/**/src/**/*.tsx"
  ]
}
